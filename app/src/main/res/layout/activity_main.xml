<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cappu"
    tools:context="com.example.codetribe.coffeeapp.MainActivity">

    <Button
        android:id="@+id/btnicetea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="icetea"
        android:textColor="#DEB887"
        android:layout_above="@+id/btnesspreso"
        android:layout_alignRight="@+id/btnesspreso"
        android:layout_alignEnd="@+id/btnesspreso"
        android:layout_marginBottom="60dp" />

    <Button
        android:id="@+id/btnesspreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="esspreso"
        android:textColor="#DEB887"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btncappuccino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cappuccino"
        android:textColor="#DEB887"
        android:layout_above="@+id/btnmintblendtea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:id="@+id/btnmintblendtea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mintblendtea"
        android:textColor="#DEB887"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="mboni's coffee shop"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnicetea"
        android:layout_alignStart="@+id/btnicetea" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnmintblendtea"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="contact details email adress mmboneni11@gmail.com 0799899023"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/btncappuccino"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
